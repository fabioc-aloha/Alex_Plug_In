{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "out",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    // NASA Power of 10 Rule 10: Strict compilation flags
    // noUnusedLocals: Deferred to v6.0 (252 existing warnings to fix)
    // noUnusedParameters: Deferred to v6.0 (requires API signature changes)
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "scripts"
  ]
}
