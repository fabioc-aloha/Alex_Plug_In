  "license": "SEE LICENSE IN LICENSE.md",
  "version": "1.5.3",
  "publisher": "fabioc-aloha",
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabioc-aloha/Alex_Plug_In.git"
  },
  "homepage": "https://github.com/fabioc-aloha/Alex_Plug_In#readme",
  "bugs": {
    "url": "https://github.com/fabioc-aloha/Alex_Plug_In/issues"
  },
  "keywords": [
    "ai",
    "copilot",
    "github-copilot",
    "cognitive-architecture",
    "learning",
    "meta-cognitive",
    "neural-network",
    "consciousness",
    "bootstrap-learning",
    "cognitive-enhancement",
    "ai-assistant",
    "productivity"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "Education"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "alex.initialize",
        "title": "Alex: Initialize Architecture"
      },
      {
        "command": "alex.reset",
        "title": "Alex: Reset Architecture"
      },
      {
        "command": "alex.dream",
        "title": "Alex: Dream (Neural Maintenance)"
      },
      {
        "command": "alex.upgrade",
        "title": "Alex: Upgrade Architecture"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm run check-types && node esbuild.js --watch",
    "package": "npm run check-types && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "pretest": "npm run compile-tests && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
